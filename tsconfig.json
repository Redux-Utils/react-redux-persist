{
	"compilerOptions": {
		// Default
		"target": "ES6",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,

		"module": "ES6",
		"declaration": true,
		"declarationDir": "types",
		"removeComments": true,
		"emitDeclarationOnly": true,
		"moduleResolution": "Node"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
